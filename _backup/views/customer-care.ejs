<%- include('./partials/header') %>

<%- include('./partials/sidebar') %>

<!-- The Content within Page -->
<!-- account content -->
<div class="col-span-9 mt-6 lg:mt-0">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Customer Care</h2>

        <!-- Contact Information -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Contact Us</h3>
            <div class="grid md:grid-cols-3 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <i class="fas fa-phone text-2xl text-primary mb-3"></i>
                    <h4 class="font-medium text-gray-800 mb-2">Phone Support</h4>
                    <p class="text-gray-600">+91 1234567890</p>
                    <p class="text-sm text-gray-500">Mon-Sat: 9AM to 6PM</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <i class="fas fa-envelope text-2xl text-primary mb-3"></i>
                    <h4 class="font-medium text-gray-800 mb-2">Email Support</h4>
                    <p class="text-gray-600">support@atheera.com</p>
                    <p class="text-sm text-gray-500">24/7 Email Support</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <i class="fas fa-comments text-2xl text-primary mb-3"></i>
                    <h4 class="font-medium text-gray-800 mb-2">Live Chat</h4>
                    <p class="text-gray-600">Chat with Us</p>
                    <p class="text-sm text-gray-500">Mon-Sat: 10AM to 8PM</p>
                </div>
            </div>
        </div>

        <!-- FAQs -->
        <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Frequently Asked Questions</h3>
            <div class="space-y-4">
                <div class="border border-gray-200 rounded-lg p-4">
                    <h4 class="font-medium text-gray-800 mb-2">How do I track my order?</h4>
                    <p class="text-gray-600">You can track your order by logging into your account and visiting the 'My Orders' section. You'll find detailed tracking information there.</p>
                </div>
                <div class="border border-gray-200 rounded-lg p-4">
                    <h4 class="font-medium text-gray-800 mb-2">What are your delivery charges?</h4>
                    <p class="text-gray-600">We offer free delivery on orders above ₹999. For orders below this amount, a nominal delivery fee of ₹49 is charged.</p>
                </div>
                <div class="border border-gray-200 rounded-lg p-4">
                    <h4 class="font-medium text-gray-800 mb-2">What is your return policy?</h4>
                    <p class="text-gray-600">We accept returns within 7 days of delivery. Items must be unused and in their original packaging. Visit our Returns & Refunds page for more details.</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Send Us a Message</h3>
            <form class="space-y-4" >
                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 mb-2">Name</label>
                        <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                    </div>
                    <div>
                        <label class="block text-gray-700 mb-2">Email</label>
                        <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                    </div>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Subject</label>
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Message</label>
                    <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                </div>
                <button type="submit" class="bg-primary text-white px-6 py-2 rounded-lg hover:bg-opacity-90 transition-colors">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</div>
<!-- account content end -->
<!-- The Content within Page Ends-->

</div>
<!-- account wrapper end -->

