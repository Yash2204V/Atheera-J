<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Atheera - Premium clothing and fashion store offering high-quality suits, sarees.">
    <meta name="keywords" content="clothing, fashion, suits, sarees, premium clothing, online shopping, Indian fashion">
    <meta name="author" content="Atheera">
    <meta property="og:title" content="Atheera - Premium Fashion Store">
    <meta property="og:description" content="Shop premium clothing and fashion items at Atheera. Discover our collection of suits, sarees, and more.">
    <meta property="og:image" content="/images/icons/favicon.png">
    <meta property="og:url" content="https://atheera.in">
    <meta property="og:type" content="website">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://atheera.in/">
    <title>Atheera Fashion Store</title>
    <link rel="icon" type="image/png" href="/images/icons/favicon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
        crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/output.css">
</head>

<body class="bg-gray-50">
    <header class="py-4 shadow-sm bg-white sticky top-0 z-40 border-b border-gray-100">
        <div class="container flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 group">
                <img src="/images/icons/favicon.png" alt="Atheera Logo" 
                     class="h-14 w-auto transition-transform group-hover:scale-105 rounded-lg">
                <!-- <span class="text-2xl font-bold text-primary font-sans tracking-wide">Atheera</span> -->
            </a>
    
            <!-- Navigation Icons -->
            <div class="flex items-center gap-6">
                <!-- Cart with animated badge -->
                <a href="/products/cart" class="relative group">
                    <div class="py-3 rounded-full hover:bg-gray-50 transition-all duration-300">
                        <i class="fas fa-shopping-bag text-xl text-gray-700"></i>
                    </div>
                    <!-- <span class="cart-badge absolute top-0 right-0 bg-primary text-white rounded-full w-6 h-6 flex items-center justify-center text-xs transform scale-90 group-hover:scale-100 transition-all">
                        0
                    </span> -->
                </a>
    
                <!-- User Auth -->
                <div class="h-8 w-px bg-gray-200 mx-2"></div>
    
                <% if(!token) { %>
                    <a href="/user/login-page" 
                       class="flex items-center gap-2 hover:text-primary transition-colors group px-4 py-2 rounded-lg hover:bg-gray-50">
                        <i class="far fa-user text-xl transform group-hover:-translate-y-0.5 transition"></i>
                        <span class="hidden md:inline font-medium">Sign In</span>
                    </a>
                <% } else { %>
                    <div class="flex items-center gap-4">
                        <a href="/account" 
                           class="flex items-center gap-2 text-gray-700 hover:text-primary transition-colors group">
                            <i class="fas fa-user-circle text-xl"></i>
                            <span class="hidden md:inline font-medium">Account</span>
                        </a>
                        <a href="/user/logout" 
                           class="flex items-center gap-2 text-gray-700 hover:text-red-600 transition-colors group px-4 py-2 rounded-lg hover:bg-gray-50">
                            <i class="fas fa-sign-out-alt text-xl"></i>
                            <span class="hidden md:inline font-medium">Logout</span>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </header>
    <!-- Navigation -->
    <nav class="bg-primary">
        <div class="container">
            <div class="flex items-center justify-between">
                <!-- Categories Dropdown -->
                <div class="relative group">
                    <button class="flex items-center gap-2 px-8 py-4 bg-primary text-white hover:bg-opacity-90 transition-colors">
                        <i class="fas fa-bars"></i>
                        <span>All Categories</span>
                        <i class="fas fa-chevron-down text-sm"></i>
                    </button>

                    <div class="absolute left-0 top-full w-64 bg-white shadow-lg py-3 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-300 z-50">
                        <a href="/products/shop?category=clothing" class="flex items-center px-6 py-3 hover:bg-gray-100 transition-colors">
                            <img src="/images/icons/dress.svg" class="w-5 h-5 object-contain">
                            <span class="ml-6 text-gray-600 text-sm">Clothing</span>
                        </a>
                    </div>
                </div>

                <!-- Main Navigation -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/" class="text-white hover:text-gray-200 transition-colors py-4">Home</a>
                    <a href="/products/shop" class="text-white hover:text-gray-200 transition-colors py-4">Shop</a>
                    <a href="#" class="text-white hover:text-gray-200 transition-colors py-4">About Us</a>
                    <a href="#" class="text-white hover:text-gray-200 transition-colors py-4">Contact</a>
                </div>

                <!-- Mobile Menu Button -->
                <button class="md:hidden p-4 text-white" id="menuBar">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden" id="mobileMenu">
        <div class="absolute right-0 top-0 h-full w-64 bg-white shadow-lg">
            <button id="closeMenu" class="absolute right-4 top-4 text-gray-500 hover:text-gray-700">
                <i class="fas fa-times text-xl"></i>
            </button>

            <div class="p-6 space-y-6">
                <div class="space-y-3">
                    <a href="/" class="block text-gray-700 hover:text-primary transition-colors">Home</a>
                    <a href="/products/shop" class="block text-gray-700 hover:text-primary transition-colors">Shop</a>
                    <a href="#" class="block text-gray-700 hover:text-primary transition-colors">About Us</a>
                    <a href="#" class="block text-gray-700 hover:text-primary transition-colors">Contact</a>
                </div>

                <hr class="border-gray-200">

                <div class="space-y-3">
                    <% if(!token) { %>
                        <a href="/user/login-page" class="flex items-center gap-2 text-gray-700 hover:text-primary transition-colors">
                            <i class="far fa-user"></i>
                            <span>Login</span>
                        </a>
                    <% } else { %>
                        <a href="/user/logout" class="flex items-center gap-2 text-red-600 hover:text-red-700 transition-colors">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>